{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "exactOptionalPropertyTypes": true,
    "types": ["vitest/globals", "node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
